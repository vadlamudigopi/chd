@{
    ViewBag.Title = "CHD Compliance application";
    string appHomePage = System.Configuration.ConfigurationManager.AppSettings.Get("homePage");
}
@section styles {
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/buttons.dataTables.min.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/buttons.html5.min.js"></script>
    <script src="~/Scripts/jszip.min.js"></script>
    <script src="~/Scripts//jspdf.min.js"></script>
    <script src="~/Scripts/html2canvas.js"></script>
    <script src="~/Scripts/office_survey_list.js"></script>
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div>
                <div style="float:right;margin: 5px;">
                    <button type="button" class="btn btn-success btn-fw" onclick="window.location.href='@(appHomePage)OfficeSurvey/Index'">
                        <i class="mdi mdi-check"></i>Add Checklist
                    </button>
                </div><h4 class="card-title">Office Checklist</h4>
            </div>
            <div class="table-responsive">
                @Html.Raw(ViewBag.htmldata)
            </div>
        </div>
    </div>
</div>
<!--- Print/PDF window --->
<div id="print_pdf"></div>
<!--- Print/PDF window --->
<!--- modal window --->
<div id="officeSurveyWindow" class="modal fade" role="dialog" >
    <div class="modal-dialog modal-lg" style="width:60%">
        <!-- Modal content-->
        <div class="modal-content">
                <div class="chd modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="chd modal-title">
                        Office Checklist
                        <button style="float:right;margin-top:-5px;margin-right:5px" data-toggle="modal" data-target="#miniModal" title="Download" class="btn btn-icons btn-rounded btn-outline-success"><i class="mdi mdi-cloud-download"></i></button>&nbsp;&nbsp;&nbsp;
                    </h4>
                </div>
                <div class="chd modal-body"></div>
        </div>
    </div>
</div>
<!--- modal window --->
<!-- Mini Modal -->
  <div class="modal fade" id="miniModal" role="dialog">
    <div class="modal-dialog modal-sm" style="margin-top: 10%;">
      <div class="modal-content" style="width:120%">
        <div class="modal-header">
          <h5 class="modal-title">Generate PDF</h5>
        </div>
        <div class="modal-body" style="background-color:white" >
          <p>Please select the Report you want to download</p>
           <div style="float:left"><a id="summaryLink"  href="~/OfficeSurvey/pdf/summary/">Summary Download</a></div>
           <div style="float:right"><a id="fullLink"  href="~/OfficeSurvey/pdf/full/">Full Download</a></div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<!-- Mini Modal -->