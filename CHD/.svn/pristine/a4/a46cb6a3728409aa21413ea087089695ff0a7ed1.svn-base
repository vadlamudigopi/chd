
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    <script src="~/Scripts/jquery.form-validator.min.js"></script>

    <script type="text/javascript">
        $.validate({
            lang: 'en'
        });
    </script>
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="col-md-4" style="margin:auto;">
                <h4>Change Password</h4>
                <div class="auto-form-wrapper">
                    <form method="post">
                        <div class="form-error">@Html.Raw(ViewBag.message)</div>
                        <div class="form-group">
                            <label class="label">Old Password</label>
                            <div class="input-group">
                                <input type="hidden" class="form-control" name="Email" id="Email" value="@Session["email"].ToString()">
                                <input type="password" class="form-control" name="Password" id="Password" placeholder="*********" data-validation="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="label">New Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" name="NewPassword" id="NewPassword" placeholder="*********" data-validation="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="label">Confirm Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" name="CnfPassword" id="CnfPassword" placeholder="*********" data-validation="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary submit-btn btn-block">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
